{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-plusplus": "off",
    "no-console": "off",
    "operator-linebreak": "off",
    "import/extensions": "off",
    "linebreak-style": ["error", "windows"],
    "object-curly-newline": "off",
    "prefer-template": "off",
    "no-restricted-syntax": ["off", "BinaryExpression[operator='of']"],
    "prefer-destructuring": "off",
    "brace-style": 0
  }
}
